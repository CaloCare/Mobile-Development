<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".ui.form.FormFragment">

    <!-- Orange Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="?attr/colorPrimaryVariant"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_your_food_details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Food Name -->
            <TextView
                android:id="@+id/foodNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_name"
                android:textColor="?android:textColorPrimary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/foodNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_food_name"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Carbohydrate -->
            <TextView
                android:id="@+id/carbohydrateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carbohydrate"
                android:textColor="?android:textColorPrimary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/carbohydrateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_carbohydrates_g"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Protein -->
            <TextView
                android:id="@+id/proteinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protein"
                android:textColor="?android:textColorPrimary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/proteinInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_protein_g"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Fat -->
            <TextView
                android:id="@+id/fatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fat"
                android:textColor="?android:textColorPrimary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/fatInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_fat_g"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Calories -->
            <TextView
                android:id="@+id/caloriesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calories"
                android:textColor="?android:textColorPrimary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/caloriesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_calories_kcal"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Calculate Button -->
            <Button
                android:id="@+id/calculateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculate_nutrition"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="?attr/colorSecondaryVariant"
                android:textColor="?android:textColorPrimary"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>